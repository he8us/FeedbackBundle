<table class="table responsive-table table-bordered">
    <thead>
    <tr>
        <th>{{ 'feedback.category.id' | trans }}</th>
        <th>{{ 'feedback.category.name' | trans }}</th>
        <th>{{ 'feedback.category.label' | trans }}</th>
        <th>{{ 'feedback.category.deleted' | trans }}</th>
        <th>{{ 'feedback.category.actions' | trans }}</th>
    </tr>
    </thead>
    <tbody>
    {% for category in categories %}
        <tr>
            <td><a href="{{ path('he8us_category_admin_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
            <td>{{ category.name }}</td>
            <td>{{ category.label }}</td>
            <td>
                {% if category.deleted %}
                    {{ 'feedback.category.deleted.yes' | trans }}
                {% else %}
                    {{ 'feedback.category.deleted.no' | trans }}
                {% endif %}
            </td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('he8us_category_admin_show', { 'id': category.id }) }}">{{ 'feedback.category.show' | trans }}</a>
                    </li>
                    <li>
                        <a href="{{ path('he8us_category_admin_edit', { 'id': category.id }) }}">{{ 'feedback.category.edit' | trans }}</a>
                    </li>
                </ul>
            </td>
        </tr>


    {% else %}
        <tr>
            <td colspan="5">
                <div class="alert alert-info">{{ "feedback.category.nocontent"|trans }}</div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('he8us_category_admin_new') }}">{{ 'feedback.category.create' | trans }}</a>
    </li>
</ul>
